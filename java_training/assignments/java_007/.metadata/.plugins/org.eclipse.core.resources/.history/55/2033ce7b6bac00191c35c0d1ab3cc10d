package gridlayoutchallenge;

import javax.swing.*;

public class Cell extends JPanel{

	JPanel panel;
	JLabel label;
	String input;
	String message;
	JButton button;
	int rows, columns;
	

	public Cell(JPanel panel, String input) {
		this.input = input;
		message = input;
		
		JButton button = new JButton(input);
		
		button.addActionListener((ae) ->{
			label.setText(input);
		});
		panel.add(button);
		
	}
	
	
	

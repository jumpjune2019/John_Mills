package gridlayoutchallenge;

import java.awt.*;
import java.util.*;
import javax.swing.*;

public class MyGrid {

	private JFrame mainFrame;
	private JPanel controlPanel;
	private JLabel topLabel;
	
	
	public MyGrid() {
		prepareGui();
	}
	

	private void prepareGui() {
		
		Dimension d = new Dimension();
		
		mainFrame = new JFrame("Column and Rows Example");
		mainFrame.setSize(d.getWidth(), d.getHeight());
		
		topLabel = new JLabel("Basic Matrix Demo", JLabel.CENTER);
		
		
		
		mainFrame.add(topLabel);
		mainFrame.setVisible(true);
		
	}//end prepareGui
	
	
	private void set
	
	public static int getRandomNum() {
		
		Random rand = new Random();
		int myRandom = rand.nextInt(4) + 2;
		
		return myRandom;
		
	}//end getRandomNum
	
	
}//end MyGrid class